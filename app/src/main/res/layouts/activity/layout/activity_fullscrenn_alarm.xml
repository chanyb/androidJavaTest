<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".screen.function.alarm.">

    <ImageView
        android:id="@+id/alarm_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/fullscreen_alarm_icon"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintVertical_bias="0.15"
        />

    <TextView
        android:id="@+id/text_medicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/alarm_icon"
        app:layout_constraintBottom_toTopOf="@id/activity_ring_dismiss"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0"
        android:text="당뇨약"
        android:textStyle="bold"
        android:textSize="60dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_medicine"
        app:layout_constraintBottom_toTopOf="@id/activity_ring_dismiss"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:text="오전 6:50"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/activity_ring_dismiss"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintVertical_bias="0.85"
        android:text="알람 끄기"
        android:textStyle="bold"
        android:textSize="33dp"
        android:textColor="@color/white"
        />




</androidx.constraintlayout.widget.ConstraintLayout>