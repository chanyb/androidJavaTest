<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smartbox_dup">


    <application
        android:name=".utils.GlobalApplcation"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Smartbox_dup"
        android:usesCleartextTraffic="true">

        <receiver android:name=".broadcastreceiver.MyBroadcastReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".screen.function.alarm.AlarmBroadcastReceiver"
            android:enabled="true"
            android:exported="true"
            >
            <intent-filter>
                <action android:name="android.app.action.SCHEDULE_EXACT_ALARM_PERMISSION_STATE_CHANGED" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- Set custom default icon. This is used when no icon is set for incoming notification messages.
     See README(https://goo.gl/l4GJaQ) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/logo" />
        <!-- Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/purple_200" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyD_BFzd1RCyQRfc70qDoq33UQpeMzh0sxM" />

        <meta-data
            android:name="com.naver.maps.map.CLIENT_ID"
            android:value="41e2pxem8h" />

        <activity
            android:name=".screen.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <data
                    android:host="kakaolink"
                    android:scheme="kakao683f8b322937adcc3782060cd9229af2"/>
                <data
                    android:host="oauth"
                    android:scheme="kakao683f8b322937adcc3782060cd9229af2"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".screen.intro.IntroActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screen.signup.SignUpActivity1"
            android:exported="true" />
        <activity android:name=".screen.signup.SignUpActivity2"
            android:exported="true" />
        <activity android:name=".screen.signup.SignUpActivity3"
            android:exported="true" />
        <activity android:name=".WebViewActivity"
            android:exported="true" />
        <activity android:name=".MapsActivity"
            android:exported="true" />
        <activity android:name=".screen.home.NaverMapActivity"
            android:exported="true" />
        <activity android:name=".screen.main.MainActivity"
            android:exported="true" />
        <activity android:name=".screen.function.FunctionListActivity"
            android:exported="false" />
        <activity android:name=".screen.function.alarm.AlarmCreateActivity"
            android:exported="false" />
        <activity android:name=".screen.function.alarm.FullScreenAlarmActivity"
            android:exported="false"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait"
            android:showOnLockScreen="true"
            android:showWhenLocked="true" />

        <service android:name=".SampleForegroundService" />
        <service
            android:name=".utils.FCMManager"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service android:name=".screen.function.alarm.AlarmService" />


    </application>

    <!-- connect internet -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- phone number -->
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />

    <!-- full screen -->
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />

    <!-- foreground service -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <!-- location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <!-- launch another app -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />

    <!-- system boot -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Vibrate -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Notification Policy -->
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />

    <!-- Exact Alarm -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <!-- full screen intent -->
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />

    <!-- foreground service -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- overlay -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <!-- wake lock -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <queries>
        <package android:name="com.kakao.talk" />
    </queries>


</manifest>
